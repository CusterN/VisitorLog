@page
@model VisitorLog.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Visit[0].VisitDt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Visit[0].Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Visit[0].AttendeeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Visit[0].AttendeeGroup)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Visit[0].HelperName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Visit[0].HelperGroup)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Visit[0].Task)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Visit[0].Resolution)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Visit[0].Tags)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Visit) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VisitDt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AttendeeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AttendeeGroup)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HelperName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HelperGroup)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Task)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Resolution)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tags)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
